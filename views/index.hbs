<body>
    <header>
    </header>



<form action='/auth/login' method='POST' class="signin-form">

<h1 id="welcome-index">Welcome to Hoodie</h1>
  
    <input type='text' name='username' placeholder="Username">
    <input type='password' name='password' id="passShow" placeholder="Password">
  

  <div id="show-password-container">
    <button type='submit' class="signin-btn">Log In</button>
    
    <div id="show-pass">
    <label for="passShow" >Show Password</label>
    <input type="checkbox" name="passShow" onclick="showPassword()" id="show-pass-checkbox">
  </div>
    </div>


</form>
<form id="signup-index-form" action="/auth/signupDisplay/" method="POST" class="signin-form">
<h2>Signup for free</h2>
  <input id="signup-lng" type="text" name="lng" hidden>
  <input id="signup-lat" type="text" name="lat" hidden>
  <button id="signup-index-btn" type="submit" class="signin-btn">SIGN UP</button>
</form>

<footer>
</footer>

</body>


</html>

<script>
  function showPassword  () {
    const passShow = document.getElementById('passShow')

    if ( passShow.type === 'password')
    {
        passShow.type = 'text';
    }
    else 
    {
        passShow.type = 'password';
    }
}

//GET current position by GPS for the form in signup
navigator.geolocation.getCurrentPosition(function(position) {
document.querySelector("#signup-lng").value = position.coords.longitude
document.querySelector("#signup-lat").value = position.coords.latitude
});

</script>